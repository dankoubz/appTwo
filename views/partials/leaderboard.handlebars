<div class="row d-flex align-items-center">
	<section id="leaderboard" class="col-12 collapse">

		{{!-- Gaming Icon --}}
		<div class="row">
			<div class="col-12 mt-2 mb-3 text-center">
				<img width="80px" src="src/controller.gif">
			</div>
		</div>

		{{!-- Leaderboard --}}
		<div class="row">
			<div class="col-12 col-md-8 mx-auto d-flex align-items-center text-center">
				{{!-- Table --}}
				<table class="table text-white">
					<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
							<th scope="col">Score</th>
							<th scope="col">Time</th>
						</tr>
					</thead>
					<tbody>
						{{#each }}
						<tr>
							<th scope="row">1</th>
							<td>DAN</td>
							<td>3,450</td>
							<td>35s</td>
						</tr>
						{{/each}}
						<tr>
							<th scope="row">2</th>
							<td>AKH</td>
							<td>3,299</td>
							<td>38s</td>
						</tr>
						<tr>
							<th scope="row">3</th>
							<td>MIC</td>
							<td>3,139</td>
							<td>40s</td>
						</tr>
					</tbody>
				</table>
			</div>
	</section>
</div>